{
    "compilerOptions": {
      "allowJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "lib": ["dom", "es2022"],
      "module": "commonjs",
      "noEmit": false,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "target": "esnext",
      "outDir": "../"
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx", "**/*.js"]
  }